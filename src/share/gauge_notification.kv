<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<MyLabel@Label>:
    color: 0.87, 0.84, 0.84, 1
    size_hint_y: .2
    height: self.texture_size[1]
    bold: True

<GaugeNotification>:
    orientation: 'vertical'
    background_color: .18, .18, .18, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    
    MyLabel:
        id: title
        text: "Title"
    
    AnchorLayout:
        anchor_x: 'center'
        BoxLayout:
            size_hint_x: None
            width: 20
            orientation: 'vertical'
            BackgroundColor:
                id: top
                background_color: .29, .29, .29, 1
            BackgroundColor:
                id: bottom
                background_color: .941, .466, .274, 1
                size_hint_y: 0.2
    
    MyLabel:
        id: subtitle
        text: "0"

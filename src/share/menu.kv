<Menu>:
    default_tab_text: "Pinned"
    default_tab: pinned
    TabPanel:
        id: pinned
        text: "Pinned"
    TabPanel:
        id: all
        text: "All"
    #TabPanel:
    #    id: settings
    #    text: "Settings"


<About>:
    id: about
    text: "About"
    GridLayout:
        cols: 1
        Label:
            id: text


<TabPanel>:
    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        
        ScrollViewLayout:
            id: layout


<ScrollViewLayout>:
    size_hint_y: None


<FeatureRow>:
    cols: 3
    size_hint_y: None

    AnchorLayout:
        anchor_y: 'center'
        size_hint: 0.4, None
        padding: 20

        Label:
            id: text
            
            text_size: self.width, None
            height: self.texture_size[1]
            
            #pos_hint: {'right': 1}
            #size_hint_x: 0.4
            #size_hint_x: None
            #halign: 'left'
            #on_texture_size: text.setter('size')
            #on_size: text.setter('size')
            #text_size: self.size
    BoxLayout:
        id: content

    AnchorLayout:
        anchor_x: 'center'
        size_hint_x: 0.4
        BoxLayout:
            size_hint_x: None
            width: self.minimum_width
            CheckBox:
                id: checkbox
                size_hint_x: None
                width: 40
            Label:
                text: "Pin"
                size_hint_x: None
                size: self.texture_size


<NumericFeature>:
    cols: 2

    Slider:
        id: slider
        
    Label:
        id: label
        text: str(slider.value)
        size_hint_x: None
        width: 50
        

<SelectFeatureOption>:
    size_hint_y: None
    height: 44


<SelectFeatureOptions>:

<SelectFeature>:
    AnchorLayout:
        anchor_y: 'center'
        Button:
            id: button
            size_hint_y: 0.5

<BoolFeature>:
    AnchorLayout:
        anchor_y: 'center'
        GridLayout:
            size_hint_y: 0.5
            cols: 2
            ToggleButton:
                id: off
                text: "OFF"
                #group: root
                value: False
            ToggleButton:
                id: on
                text: "ON"
                #group: root
                value: True


<WelcomeScreen>:
    StackLayout:
        canvas.before:
            Color:
                rgba: .1, .1, .1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Starting ..."


<MenuScreen>:


<TabHeader>:


<TabPanel>:
    do_scroll_x: False
    do_scroll_y: True
    
    ScrollViewLayout:
        id: layout


<SettingsTab>:
    text: "Connection"

    GridLayout:
        cols: 2

        Label:
            text: "Host"
        TextInput:
            id: host
        Label:
            text: "Port"
        TextInput:
            id: port
        Label:
            text: "Protocol"
        Button:
            id: protocol
        Label:
            text: ""
        Button:
            text: "Apply"
            on_press: root.apply()


<About>:
    id: about
    text: "About"
    GridLayout:
        cols: 1
        Label:
            id: text


<ScrollViewLayout>:
    size_hint_y: None


<FeatureRow>:
    cols: 3
    size_hint_y: None
    spacing: [20, 20]
    padding: [20, 20]
    row_force_default: True
    row_default_height: 50
    
    Label:
        id: text
        size_hint_x: 0.4
        text_size: self.width, None

    BoxLayout:
        id: content

    AnchorLayout:
        size_hint_x: 0.4
        anchor_x: 'center'
        BoxLayout:
            size_hint_x: None
            width: self.minimum_width
            CheckBox:
                id: checkbox
                size_hint_x: None
                width: 40
            Label:
                text: "Pin"
                size_hint_x: None
                size: self.texture_size


<NumericFeature>:
    cols: 2

    Slider:
        id: slider
        
    Label:
        id: label
        text: str(slider.value)
        size_hint_x: None
        width: 50
        

<SelectFeatureOption>:
    size_hint_y: None
    height: 44


<SelectFeatureOptions>:

<SelectFeature>:
    id: button

<BoolFeature>:
    cols: 2
    ToggleButton:
        id: off
        text: "OFF"
        #group: root
        value: False
    ToggleButton:
        id: on
        text: "ON"
        #group: root
        value: True


#!/usr/bin/env hifish
$poweron(force=True)

# Switch Bass Mode
if $front_speaker != "B":
    $'MNMEN OFF'; $'MNMEN ON'; MNCUP; MNCUP; MNCUP; MNCUP; MNCUP; MNCUP; MNCUP; MNCDN; MNCDN; MNCDN; MNENT; MNCDN; MNENT; MNCDN; MNCDN; MNCDN; MNCDN; MNCDN; MNENT; MNENT; MNCRT; MNENT 
    wait(.5)
    $'MNMEN OFF'

$'DIM BRI'; $'PSFRONT SPB'; $'SISAT/CBL'; $'MSSTEREO'; $'PSMULTEQ:OFF'
wait(1)
$'CVSW 50'

